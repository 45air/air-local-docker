{
  "name": "@45air/air-local-docker",
  "version": "1.0.1",
  "description": "Local Docker development environment setup and provisioning from the command line",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "airlocal": "./node_modules/.bin/node ./index.js",
    "airlocal-hosts": "./node_modules/.bin/node ./hosts.js",
    "test": "./node_modules/.bin/ava --verbose",
    "test:watch": "./node_modules/.bin/ava --verbose --watch",
    "coverage": "./node_modules/.bin/nyc npm test",
    "format": ".node_modules/.bin/eslint --fix .",
    "lint": ".node_modules/.bin/eslint ."
  },
  "bin": {
    "airlocal": "./index.js",
    "airlocal-hosts": "./hosts.js"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:45air/air-local-docker.git"
  },
  "author": "Reilly Lowery",
  "dependencies": {
    "@sindresorhus/slugify": "^0.9.1",
    "asyncro": "^3.0.0",
    "axios": "^0.19.0",
    "chalk": "^3.0.0",
    "commander": "^4.0.1",
    "compare-versions": "^3.5.1",
    "core-js": "^3.5.0",
    "fs-extra": "^8.1.0",
    "hostile": "^1.3.2",
    "inquirer": "^7.0.0",
    "lodash.has": "^4.5.2",
    "log-process-errors": "^5.0.3",
    "mysql": "^2.17.1",
    "node": "^10.16.0",
    "read-yaml": "^1.1.0",
    "sudo-prompt": "^9.1.1",
    "terminal-link": "^2.0.0",
    "update-check": "^1.5.3",
    "update-notifier": "^3.0.1",
    "wait.for": "^0.6.6",
    "winston": "^3.2.1",
    "write-yaml": "^1.0.0"
  },
  "devDependencies": {
    "ava": "^2.4.0",
    "eslint": "^6.7.2",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-ava": "^9.0.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "nixt": "^0.5.1",
    "nyc": "^14.1.1",
    "standard": "^14.3.1"
  },
  "ava": {
    "files": [
      "./tests/*.test.js",
      "./tests/**/*.test.js"
    ],
    "sources": [
      "./index.js",
      "./hosts.js",
      "./src/*.js",
      "./src/**/*.js"
    ],
    "inherit": true,
    "verbose": true
  }
}
